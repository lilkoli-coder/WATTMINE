      }
    </style>

    <script>
      // Typing Effect
      const words = ["Powering Businesses...", "Boosting Your Digital Presence...", "Delivering Smart Tech Solutions..."];
      let i = 0, j = 0, isDeleting = false;
      const speed = 120;
      const typingText = document.getElementById("typingText");

      function typeLoop() {
        let current = words[i];
        if (!isDeleting) {
          typingText.textContent = current.slice(0, j++);
          if (j > current.length) {
            isDeleting = true;
            setTimeout(typeLoop, 1000);
            return;
          }
        } else {
          typingText.textContent = current.slice(0, j--);
          if (j < 0) {
            isDeleting = false;
            i = (i + 1) % words.length;
          }
        }
        setTimeout(typeLoop, speed);
      }
      typeLoop();
    </script>

    <!-- ACTIVATION FEE NOTICE -->
