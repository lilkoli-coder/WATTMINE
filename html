    <script>
      function processPayment() {
        const number = document.getElementById('payerNumber').value.trim();
        const status = document.getElementById('paymentStatus');

        if (number === "") {
          status.textContent = "Please enter a valid phone number.";
          status.className = "mt-3 text-red-600 text-sm font-medium";
          return;
        }

        status.textContent = "Processing payment request for " + number + "...";
        status.className = "mt-3 text-green-700 text-sm font-medium";

        // DEMO ONLY — Replace with real API or STK push integration
        setTimeout(() => {
          status.textContent = "Payment request sent! Check your phone to complete the KES 100 activation.";
        }, 1500);
      }
    </script>

